<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    tools:context="com.aysoreyp.aysor.fragments.CommiteesFragment">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/day_bt_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitEnd"
            android:layout_gravity="start"
            android:src="@drawable/day_1"
            android:background="@android:color/transparent"
            android:clickable="true"/>

        <ImageButton
            android:id="@+id/day_bt_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitEnd"
            android:layout_gravity="start"
            android:layout_below="@id/day_bt_1"
            android:src="@drawable/day_2"
            android:background="@android:color/transparent"
            android:clickable="true"/>

        <ImageButton
            android:id="@+id/day_bt_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitEnd"
            android:layout_gravity="start"
            android:layout_below="@id/day_bt_2"
            android:src="@drawable/day_3"
            android:background="@android:color/transparent"
            android:clickable="true"/>

        <ImageButton
            android:id="@+id/day_bt_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitEnd"
            android:layout_gravity="start"
            android:layout_below="@id/day_bt_3"
            android:src="@drawable/day_4"
            android:background="@android:color/transparent"
            android:clickable="true"/>

        <ImageButton
            android:id="@+id/day_bt_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitEnd"
            android:layout_gravity="start"
            android:layout_below="@id/day_bt_4"
            android:src="@drawable/day_5"
            android:background="@android:color/transparent"
            android:clickable="true"/>

        <ImageButton
            android:id="@+id/day_bt_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitEnd"
            android:layout_gravity="start"
            android:layout_below="@id/day_bt_5"
            android:src="@drawable/day_6"
            android:background="@android:color/transparent"
            android:clickable="true"/>

        <ImageButton
            android:id="@+id/day_bt_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitEnd"
            android:layout_gravity="start"
            android:layout_below="@id/day_bt_6"
            android:src="@drawable/day_7"
            android:background="@android:color/transparent"
            android:clickable="true"/>

        <ImageButton
            android:id="@+id/day_bt_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitEnd"
            android:layout_gravity="start"
            android:layout_below="@id/day_bt_7"
            android:src="@drawable/day_8"
            android:background="@android:color/transparent"
            android:clickable="true"/>

        <ImageButton
            android:id="@+id/day_bt_9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitEnd"
            android:layout_gravity="start"
            android:layout_below="@id/day_bt_8"
            android:src="@drawable/day_9"
            android:background="@android:color/transparent"
            android:clickable="true"/>

    </RelativeLayout>
</ScrollView>